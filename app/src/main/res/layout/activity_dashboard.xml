<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/gambar"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/foto"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/nama"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gambar"
            android:textSize="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Haniifa Aliila Faudyta"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gambar"
            android:textSize="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/nama"
            android:text="A11.2021.13820"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:text="Aplikasi Entry Kartu Hasil Studi"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame01">
                    <Button
                        android:clickable="true"
                        android:foreground="?android:attr/actionBarItemBackground"
                        android:background="@drawable/icon_entry"
                        android:layout_width="120dp"
                        android:onClick="entrydata"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Entry"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame01">
                    <Button
                        android:clickable="true"
                        android:foreground="?android:attr/actionBarItemBackground"
                        android:background="@drawable/icon_tampil"
                        android:layout_width="120dp"
                        android:onClick="tampildata"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Tampil"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame01">
                    <Button
                        android:clickable="true"
                        android:foreground="?android:attr/actionBarItemBackground"
                        android:background="@drawable/icon_cetak"
                        android:layout_width="120dp"
                        android:onClick="cetakdata"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Cetak"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame01">
                    <Button
                        android:clickable="true"

                        android:foreground="?android:attr/actionBarItemBackground"
                        android:background="@drawable/icon_laporan"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Laporan"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame01">
                    <Button
                        android:clickable="true"
                        android:foreground="?android:attr/actionBarItemBackground"
                        android:background="@drawable/icon_tentang"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Tentang"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame01">
                    <Button
                        android:clickable="true"
                        android:background="@drawable/icon_keluar"
                        android:foreground="?android:attr/actionBarItemBackground"

                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Keluar"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Fakultas Ilmu Komputer teknik Informatika - S1"
            android:background="@color/blue"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>